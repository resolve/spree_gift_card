<%= content_tag :tr, class: "gc-table-row state-#{gift_card.status} #{cycle('even', 'odd')}" do %>
  <td class="code"><%= gift_card.code %></td>
  <td class="current-value"><%= number_to_currency gift_card.current_value %></td>
  <td class="issue-date"><%= gift_card.created_at.to_date %></td>
  <td class="expiration-date"><%= gift_card.expiration_date.to_date %></td>
  <%= content_tag :td, Spree.t(gift_card.status), class: "state state-#{gift_card.status}" %>
  <td class="note"><%= gift_card.note %></td>
  <td class="transfer">
    <%= link_to Spree.t(:transfer_gift_card), [:send_to_friend, gift_card], class: :btn %>
  </td>
<% end %>
